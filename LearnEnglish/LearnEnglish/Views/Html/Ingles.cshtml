@{
    ViewData["Title"] = "Inglês";
}

<h1 id="BemVindoX">Bem-vindo</h1>
<br />
<br />

<p id="QualNivelIngles" style="font-size:30px; text-align: center;">Qual é o seu nível de inglês?</p>

<div id="PrimeirosBotoes" style="display: flex; justify-content: center; gap: 20px; margin-bottom: 20px;">
    <button id="BotaoInglesNaoSei" style="background-color:red; width:200px; height:100px;">Nunca estudei</button>
    <button id="botaoInglesIniciante" style="background-color:yellow; width:200px; height:100px;">Sou iniciante</button>
</div>

<div id="BotoesRestantes" style="display: flex; justify-content: center; gap: 20px;">
    <button id="botaoInglesAmador" style="background-color:green; width:200px; height:100px;">Consigo falar</button>
    <button id="botaoInglesFluente" style="background-color:blue; color: white; width:200px; height:100px;">Fluente</button>
</div>

<div id="TesteRapido" style="display: none; text-align: center; margin-top: 30px;">
    <p style="font-size: 24px;">Vamos fazer um rápido teste em base da sua resposta ?</p>
    <button id="VamosBotao" style="width: 200px; height: 60px;">Vamos!</button>
    <button id="OutraHoraBotao" style="width: 200px; height: 60px;">Deixa para outra hora</button>
</div>

<div id="PrimeiraPerguntaNaoSei" style="display: none; text-align: center; margin-top: 30px;">
    <p id="PrimeiraPNaoSei" style="font-family:Arial, Helvetica, sans-serif; font-size: 30px">
        Como eu posso dizer eu te amo para alguém ?
    </p>
    <p style="font-family: Arial, Helvetica, sans-serif;">Questão: 01/05</p>
    <button>Je te aime</button>
    <button>Te quiero</button>
    <button>I love you</button>
    <button>Eu te amo</button>
    <br /><br />
    <button id="avancarPrimeiraPerguntaNaoSei">Avançar</button>
</div>

<div id="SegundaPerguntaNaoSei" style="display: none; text-align: center; margin-top: 30px;">
    <p style="font-family:Arial, Helvetica, sans-serif; font-size: 30px">
        Como eu posso dizer "olá" para alguém ?
    </p>
    <p style="font-family: Arial, Helvetica, sans-serif;">Questão: 02/05</p>
    <button>Hello</button>
    <button>Helo</button>
    <button>Helloh</button>
    <button>Hellow</button>
    <br /><br />
    <button id="avancarSegundaPerguntaNaoSei">Avançar</button>
</div>

<div id="TerceiraPerguntaNaoSei" style="display: none; text-align: center; margin-top: 30px;">
    <p style="font-family:Arial, Helvetica, sans-serif; font-size: 30px">Como é "azul" em inglês ?</p>
    <p style="font-family: Arial, Helvetica, sans-serif;">Questão: 03/05</p>
    <button>Red</button>
    <button>Blui</button>
    <button>Helloh</button>
    <button>Hellow</button>
    <br /><br />
    <button id="avancarTerceiraPerguntaNaoSei">Avançar</button>
</div>

<div id="QuartaPerguntaNaoSei" style="display: none; text-align: center; margin-top: 30px;">
    <p style="font-family:Arial, Helvetica, sans-serif; font-size: 30px">Como é "um, dois e três" em inglês ?</p>
    <p style="font-family: Arial, Helvetica, sans-serif;">Questão: 04/05</p>
    <button>Uno, dos, tres</button>
    <button>Une, thow,three</button>
    <button>One, two, three</button>
    <button>Um, dois, três</button>
    <br /><br />
    <button id="avancarQuartaPerguntaNaoSei">Avançar</button>
</div>

<div id="QuintaPerguntaNaoSei" style="display: none; text-align: center; margin-top: 30px;">
    <p style="font-family:Arial, Helvetica, sans-serif; font-size: 30px">Como é "idade" em inglês ?</p>
    <p style="font-family: Arial, Helvetica, sans-serif;">Questão: 05/05</p>
    <button>Agi</button>
    <button>Age</button>
    <button>Aghe</button>
    <button>Agew</button>
    <br /><br />
    <button id="avancarQuintaPerguntaNaoSei">Finalizar teste</button>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const nome = localStorage.getItem("nomeUsuario");
        if (nome) {
            const titulo = document.getElementById("BemVindoX");
            if (titulo) {
                titulo.textContent = `Bem-vindo, ${nome}!`;
            }
        }

        const botaoNaoSei = document.getElementById("BotaoInglesNaoSei");
        const TesteRapidoBotoes = document.getElementById("TesteRapido");
        const botaoInglesIniciante = document.getElementById("botaoInglesIniciante");
        const botaoInglesAmador = document.getElementById("botaoInglesAmador");
        const botaoInglesFluente = document.getElementById("botaoInglesFluente");
        const vamosBotao = document.getElementById("VamosBotao");
        const outraHoraBotao = document.getElementById("OutraHoraBotao");
        const PrimeiraPergunta = document.getElementById("PrimeiraPerguntaNaoSei");
        const avancarPrimeiraPerguntaNaoSei = document.getElementById("avancarPrimeiraPerguntaNaoSei");
        const SegundaPergunta = document.getElementById("SegundaPerguntaNaoSei");
        const avancarSegundaPerguntaNaoSei = document.getElementById("avancarSegundaPerguntaNaoSei");
        const TerceiraPerguntaNaoSei = document.getElementById("TerceiraPerguntaNaoSei");
        const avancarTerceiraPerguntaNaoSei = document.getElementById("avancarTerceiraPerguntaNaoSei");
        const QuartaPerguntaNaoSei = document.getElementById("QuartaPerguntaNaoSei");
        const avancarQuartaPerguntaNaoSei = document.getElementById("avancarQuartaPerguntaNaoSei");
        const QuintaPerguntaNaoSei = document.getElementById("QuintaPerguntaNaoSei");

        botaoNaoSei.addEventListener("click", () => {
            PrimeirosBotoes.style.display = "none";
            BotoesRestantes.style.display = "none";
            TesteRapidoBotoes.style.display = "block";
        });

        botaoInglesIniciante.addEventListener("click", () => {
            PrimeirosBotoes.style.display = "none";
            BotoesRestantes.style.display = "none";
            TesteRapidoBotoes.style.display = "block";
        });

        botaoInglesAmador.addEventListener("click", () => {
            PrimeirosBotoes.style.display = "none";
            BotoesRestantes.style.display = "none";
            TesteRapidoBotoes.style.display = "block";
        });

        botaoInglesFluente.addEventListener("click", () => {
            PrimeirosBotoes.style.display = "none";
            BotoesRestantes.style.display = "none";
            TesteRapidoBotoes.style.display = "block";
        });

        vamosBotao.addEventListener("click", () => {
            TesteRapidoBotoes.style.display = "none";
            PrimeiraPergunta.style.display = "block";
        });

        avancarPrimeiraPerguntaNaoSei.addEventListener("click", () => {
            PrimeiraPergunta.style.display = "none";
            SegundaPergunta.style.display = "block";
        });

        avancarSegundaPerguntaNaoSei.addEventListener("click", () => {
            SegundaPergunta.style.display = "none";
            TerceiraPerguntaNaoSei.style.display = "block";
        });

        avancarTerceiraPerguntaNaoSei.addEventListener("click", () => {
            TerceiraPerguntaNaoSei.style.display = "none";
            QuartaPerguntaNaoSei.style.display = "block";
        });

        avancarQuartaPerguntaNaoSei.addEventListener("click", () => {
            QuartaPerguntaNaoSei.style.display = "none";
            QuintaPerguntaNaoSei.style.display = "block";
        });
    });
</script>
